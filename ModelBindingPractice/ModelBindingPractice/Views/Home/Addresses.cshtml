@model IList<ModelBindingPractice.Models.AddressSummary>
@{
    ViewBag.Title = "Addresses";
}

<h2>Addresses</h2>

@if (Model.Count == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <fieldset>
                <legend>Address@(i + 1)</legend>
                <div>
                    <label>City:</label>&nbsp;
                    @Html.Editor($"[{i}].City")
                </div>
                <div>
                    <label>Country:</label>&nbsp;
                    @Html.Editor($"[{i}].Country")
                </div>
            </fieldset>
        }
        <button type="submit">Submit</button>
    }
}
else
{
    foreach (var item in Model)
    {
        <p>@item.City,@item.Country</p>
    }
    @Html.ActionLink("Back", "Addresses")
}

