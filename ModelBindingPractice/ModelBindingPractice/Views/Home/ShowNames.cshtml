@*@model IList<string>*@
@model string[]
@{
    ViewBag.Title = "Show Names";
}

<h2>Show Names</h2>
@*@if (Model.Count == 0)*@
@if (Model.Length == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <div>
                <label>@(i + 1)</label>
                &nbsp;
                @Html.TextBox("names")
            </div>
        }
        <button type="submit">Submit</button>
    }
}
else
{
    foreach (string name in Model)
    {
        <p>@name</p>
    }
    @Html.ActionLink("Back", "ShowNames")
}
